#include "my_functions.h"

/* Write a function that reverses the content of an array of integers */
void reverse_array(int *a, int n) {

  int i;
  int j;
  int temp[100];
    
  for(i = 0; i < n; i++)
    {
      temp[i] = a[i];
    } 
  for(i = 0, j = (n-1); i < n; i++, j--)
    {
      a[i] = temp[j];
    }
}
  
